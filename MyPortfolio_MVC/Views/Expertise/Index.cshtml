@model List<MyPortfolio_MVC.Models.TblExpertis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Uzmanlık Alanlarım</h2>

<br />
<table class="table table-striped">
    <thead>
        <tr>

            <th>#</th>
            <th>Uzmanlık Alanı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ExpertiseId</th>
            <th>@item.Title</th>


            <td><a href="/Expertise/DeleteExpertise/@item.ExpertiseId" class="btn btn-outline-danger">Sil</a> </td>
            <td><a href="/Expertise/UpdateExpertise/@item.ExpertiseId" class="btn btn-outline-info">Güncelle</a> </td>
        </tr>
    }



</table>
<br />
<a href="/Expertise/CreateExpertise" class="btn btn-primary">Yeni Uzmanlık Alanı Ekle</a>
