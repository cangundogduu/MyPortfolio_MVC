@model List<MyPortfolio_MVC.Models.TblMessage>
@{
    ViewBag.Title = "ReadMessage";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Okunmuş Mesajlar</h2>

<br />
<table class="table table-striped">
    <thead>
        <tr>

            <th>#</th>
            <th>Gönderen Ad Soyad</th>
            <th>Email</th>
            <th>Konu</th>
            <th>Sil</th>
            <th>Mesajı aç</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <th>@item.Name</th>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a> </td>
                <td><a href="/Message/ReadMessageDetail/@item.MessageId" class="btn btn-outline-primary"> Mesajı Aç</a></td>
            </tr>
        }
    </tbody>


</table>
<a href="/Message/Index" class="btn btn-primary">Okunmamış Mesajlara Geri Dön.</a>