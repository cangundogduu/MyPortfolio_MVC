@model MyPortfolio_MVC.Models.TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x=>x.ProjectId)
    <label>PROJE ADI</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Name)</p>
    <br />

    <label>GÖRSEL URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.ImageUrl)</p>
    <br />

    <label>KATEGORİ</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, "Kategori Seçiniz", new { @class = "form-control bg-dark" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.CategoryId)</p>
    <br />

    <label>AÇIKLAMA</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.Description)</p>
    <br />

    <label>GİTHUB URL</label>
    @Html.TextBoxFor(x => x.GithubUrl, new { @class = "form-control" })
    <p class="text-danger">@Html.ValidationMessageFor(x => x.GithubUrl)</p>
    <br />

    <button class="btn btn-outline-success">Güncelle</button>

</form>